<div class="container">
  <div class="row">
    <div class="col-sm-6 col-sm-offset-3">
      <h1>Publicar Punto de Venta</h1>
      <%= form_for @p do |f| %>
      <!-- Aqui se agregara el campo que almacena la foto actual
        <div class="form-group">
          <%= f.file_field :foto, class: "form-control input-lg", placeholder: "Seleccione el archivo de una foto actual del punto de venta" %>
        </div> -->
        <div class="form-group">
          <%= f.text_field :codigo, class: "form-control input-lg", placeholder: "Ingresa el codigo del punto de venta" %>
        </div>
        <div class="form-group">
          <%= f.text_field :nombre, class: "form-control input-lg", placeholder: "Ingresa el nombre del punto de Venta" %>
        </div>
        <div class="form-group">
          <%= f.text_field :direccion, class: "form-control input-lg", placeholder: "Ingresa la direccion del punto de venta" %>
        </div>
        <div class="form-group">
          <%= f.text_field :telefono, class: "form-control input-lg", placeholder: "Ingresa el telefono del punto de venta" %>
        </div>
        <div>
          <%= f.submit "Publicar Punto de Venta", class: "btn btn-primary btn-lg btn-block" %>
        </div>
      <% end %>
    </div>
  </div>
</div>
