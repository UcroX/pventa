<div class="container">
  <div class="row">
    <div class="col-sm-8 col-sm-offset-2">
      <div class="page-header icons">
        <h1>Listado Tareas</h1>
        <%= link_to "<span class='glyphicon glyphicon-arrow-left' data-toggle='tooltip' title='ir a Inicio'></span>".html_safe, tasks_path %>
        <%= link_to "<span class='glyphicon glyphicon-plus' data-toggle='tooltip' title='Registrar Nueva Tarea'></span>".html_safe, new_task_path, remote: true %>
      </div>
      <table class="table table-striped">
        <thead>
          <tr>
            <th>DESCRIPCION</th>
            <th>CANTIDAD</th>
            <th>VALOR UNITARIO</th>
            <th>ACCION</th>
          </tr>
        </thead>
        <% @task.each do |task| %>
          <tr>
            <td><%= task.descripcion %></td>
            <td ><%= task.cantidad %></td>
            <td align="center">$ <%= number_with_delimiter(task.valor_unitario) %></td>
            <td><div class="icons"><%= link_to "<span class='glyphicon glyphicon-pencil' data-toggle='tooltip' title='Modificar Tarea'></span>".html_safe, edit_task_path(task), remote: true %>
            <%= link_to "<span class='glyphicon glyphicon-trash' data-toggle='tooltip' title='Elimina esta Tarea'></span>".html_safe, task, method: :delete, data: { confirm: "¿Estás seguro de eliminar esta Tareas?" } %></div></td>
          </tr>
        <% end %>
      </table>
    </div>
  </div>
</div>
