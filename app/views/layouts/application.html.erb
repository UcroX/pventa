<!DOCTYPE html>
<html>
  <head>

    <title>Pventa</title>
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>

    <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_include_tag 'application', 'data-turbolinks-track': 'reload' %>
  </head>

  <body>
    <nav class="navbar navbar-inverse navbar-fixed-top">
      <div class="container-fluid">
        <!--<div class="navbar-header">
          <div class="col-sm-10 col-sm-offset-1"> -->
            <!-- Brand and toggle get grouped for better mobile display -->
            <div class="navbar-header">
              <button type="button" class="navbar-toggle collapsed" data-toggle="collapse" data-target="#bs-example-navbar-collapse-1">
                <span class="sr-only">Toggle navigation</span>
                <span class="icon-bar"></span>
                <span class="icon-bar"></span>
                <span class="icon-bar"></span>
              </button>
              <a class="navbar-brand" href="" data-toggle="tooltip" title="Pagina de Inicio">
                <%= link_to image_tag(ActionController::Base.helpers.asset_path('logorecords.png')), root_path, class: "navbar-brand" %>
                <%= link_to "App Puntos de Venta", root_path, class: "navbar-brand" %>
              </a>
            </div> <!--Cierra navbar header -->

            <!-- Collect the nav links, forms, and other content for toggling -->
            <div class="collapse navbar-collapse" id="bs-example-navbar-collapse-1">
              <ul class="nav navbar-nav">

              </ul>
              <ul class="nav navbar-nav navbar-right">
                <% if signed_in? %>
                  <li data-toggle="tooltip" title="Agregar Nuevo Punto de Venta"><%= link_to "Registrar PV <span class='glyphicon glyphicon-plus'></span>".html_safe, new_point_path %></li>
                  <li data-toggle="tooltip" title="Cerrar sesion"><%= link_to "Salir <span class='glyphicon glyphicon-off'></span>".html_safe, logout_path, method: :delete %></li>
                <% else %>
                  <li><%= link_to "RegÃ­strate", new_user_path %></li>
                  <li><%= link_to "Login", login_path %></li>
                <% end %>
              </ul>
              <form class="navbar-form navbar-right" role="search" data-toggle="tooltip" title="Buscar Punto de Venta">
                <div class="form-group">
                  <input class="form-control" id="myInput" type="text" placeholder="Search..">
                </div>
              </form>
            </div><!-- /.navbar-collapse -->
          </div>
        <!-- </div> -->
      <!--</div>< /.container -->
    </nav>
    <div class="row">
      <% if flash[:notice] %>
        <div class="alert alert-success"><%= flash[:notice] %></div>
      <% end %>

      <%= yield %>
    </div>
  </body>
</html>
